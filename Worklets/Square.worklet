#ifndef __Square_worklet_
#define __Square_worklet_

DAX_WORKLET void Square(DAX_IN dax::exec::WorkMapField& work,
  DAX_IN dax::exec::Field& in_field,
  DAX_OUT dax::exec::Field& out_field)
{
  dax::Vector3 value = in_field.GetVector3(work);
  value.x *= value.x;
  value.y *= value.y;
  value.z *= value.z;
  out_field.Set(work, value);
}

DAX_WORKLET void SquareScalar(DAX_IN dax::exec::WorkMapField& work,
  DAX_IN dax::exec::Field& in_field,
  DAX_OUT dax::exec::Field& out_field)
{
  dax::Scalar value = in_field.GetScalar(work);
  out_field.Set(work, value * value);
}

#endif
